<!doctype html>
<html lang="en">
  <%-include('./Common/navbar.ejs')%>
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/components/checkbox.min.css"
    integrity="sha512-8MO4eLlm+X3l7i+0/GHv/Zq/3HwySed/hXYX7+2ysnTlYPYO6t4Eu+1n9Wg3/DM+u6rJKZV7njfyPCM+nuhM1w=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

  <title>UI CRUD</title>
</head>

<body>
  <div class="container" style="background-color: #a6ebf1">
    <h2>Get All View</h2>
    <a href="/user" class="btn btn-primary btn-sm">add user</a>
    <table class="table">
      <thead>
        <tr style="background-color: #f6f6f6">
          <th scope="col">Sl No</th>
          <th scope="col">Mongo ID</th>
          <th scope="col">Product Name</th>
          <th scope="col">Product Description</th>
          <th scope="col">Product Size</th>
          <th scope="col">Product Color</th>
          <th scope="col">Image</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (data.length===0) { %>
          <tr>
            <td colspan="8" class="text-center">
              <h1><span class="badge badge-secondary">No data found ðŸ˜…</span></h1>
              
            </td>
          </tr>
          <% }else{ %>
            <% data.forEach((item,index)=> {%>
              <tr>
                <th scope="row">
                  <%=index+1%>
                </th>
                <td>
                  <h6>
                    <%= item.id.slice(-6)%>
                  </h6>
                </td>
                <td>
                  <%=item.product_name%>
                </td>
                <td>
                  <%=item.product_des%>
                </td>
                <td>
                  <%=item.product_size%>
                </td>
                <td>
                  <%=item.product_color%>
                </td>
                <td>
                  <% item.images.forEach(image=>{%>
                    <img src="<%=image%>" alt="sss" height="46px" width="46px"
                      style="border-radius: 0px; margin-top: -6px;">
                    <%})%>
                </td>
                <!-- <td><img src="<%=item.images%>" alt="sss" height="50px" width="50px"></td> -->


                <td><a href="/edituser/<%=item._id%>" class="btn btn-success btn-sm">Update</a></td>
                <td><a href="/deleteuser/<%=item._id%>" class="btn btn-danger btn-sm">Delete</a></td>
              </tr>
              <% })%>
                <% } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
  >
</body>

</html>